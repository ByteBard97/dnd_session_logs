{
  "version": "1.0",
  "description": "D&D Session Log Style Rules",
  "rules": {
    "headers": {
      "h1": {
        "ideal_max": 45,
        "absolute_max": 60,
        "description": "Session titles and major section headers"
      },
      "h2": {
        "ideal_max": 35,
        "absolute_max": 50,
        "description": "Session subsections and major events"
      },
      "h3": {
        "ideal_max": 30,
        "absolute_max": 40,
        "description": "Minor sections and specific encounters"
      }
    },
    "content": {
      "line_length": {
        "max_length": 120,
        "recommended_max": 100,
        "description": "Maximum line length for readability"
      },
      "session_numbering": {
        "pattern": "^# Session \\d+",
        "description": "Session headers should follow 'Session X' format"
      }
    },
    "formatting": {
      "bullet_points": {
        "required_character": "*",
        "description": "Use asterisks for bullet points"
      },
      "emphasis": {
        "bold_pattern": "\\*\\*[^*]+\\*\\*",
        "italic_pattern": "\\*[^*]+\\*",
        "description": "Use asterisks for emphasis, not underscores"
      }
    },
    "structure": {
      "max_consecutive_empty_lines": 2,
      "require_space_after_headers": true,
      "description": "Document structure requirements"
    }
  },
  "session_specific": {
    "common_issues": [
      "empty_headers",
      "corrupted_footnotes", 
      "inconsistent_session_numbering",
      "missing_spacing_around_headers",
      "overlong_lines"
    ],
    "auto_fixes": [
      "remove_empty_headers",
      "standardize_session_headers",
      "fix_bullet_formatting",
      "remove_trailing_whitespace",
      "normalize_emphasis"
    ]
  },
  "abbreviations": {
    "Session": "Sess.",
    "Character": "Char",
    "Investigation": "Invest",
    "Encounter": "Enc",
    "Dungeon Master": "DM",
    "Non-Player Character": "NPC", 
    "Player Character": "PC"
  }
} 